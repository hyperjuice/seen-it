  <%= link_to image_tag("http://i.imgur.com/WE61y1y.png?1"), like_post_path, method: :put%>


<span class="tag-pad glyphicon glyphicon-tags"></span>
<% @post.tags.each do |tag| %>
  <span class="label label-default"><%= tag.category %></span>
<% end %>


<h1>UPVOTES: <%= @post.get_upvotes.size %></h1>

<p>
  <strong>name:</strong>
  <%= @post.name %>
</p>

<p>
  <strong>content:</strong>
  <%= raw @post.content %>
</p>
 
<h2>Comments</h2>
<% @post.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>
 
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>
 
