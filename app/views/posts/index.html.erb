<div class="page-header">
  <h1> All Questions </h1>
</div>

<%= link_to "Post New Question", new_post_path, class: "btn btn-success" %>

<% @posts.each do |post| %>
<div class="post">
  <strong><%= post.name %></strong>
    <p><%= post.content %></p>

  <div class="meta">
    <%= link_to time_ago_in_words(post.created_at) + " ago ", post %> |
    <span class="admin">
      <%= link_to "Show", post if policy(post).show? %> |
      <%= link_to "Edit", edit_post_path(post) if policy(post).edit? %> | 
      <%= link_to "Delete", post, method: :delete, data: { confirm: "Are you sure you want to delete"} if policy(post).destroy? %> 
    </span>
  </div>
</div>
<% end %>